/* pages/shopcart/shopcart.wxss */
.shopcart-main-container{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.opertion-container{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 700rpx;
}
.address{
  width: 350rpx;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.shop-item{
  width: 700rpx;
  margin-top: 35rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f1f1f1;
}
.shop-item:last-child{
  border-bottom: 0;
  margin-bottom: 100rpx;
}
image{
  width: 150rpx;
  height: 150rpx;
  margin: 0 25rpx;
  border-radius: 15rpx;
  background-color: red;
}
.good-info{
  margin-top: 10rpx;
}
.good-price-num{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 400rpx;
  margin-top: 30rpx;
}
.amount{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.amount view{
  width: 70rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #f1f1f1;
}
.amount view:nth-child(2){
  border-left: 1px solid rgb(117, 114, 114);
  border-right: 1px solid rgb(117, 114, 114);
}
/* 底部 */
.bottom-container{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  background-color: thistle;
}
.bottom-wrapper{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 60%;
  height: 100%;
}
.checkall{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.settlement{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40%;
  height: 100%;
  color: #fff;
  background-color: red;
}